@using Project_IHFF.Models;
@using System.Collections.Generic;

@model IEnumerable<SpecialViewModel>

@foreach (SpecialViewModel special in Model)
            {
    <div class="contentBox">
        <div class="col-md-2 noPadd">
            <img src="@special.Image" style="height:13em" />
        </div>
        <div class="col-md-10 noPadd whiteText">
            <div class="col-md-9">
                <h1 class="title">@special.Name</h1>
                <h3 class="subTitle">@special.Host</h3>
                <p class="description">@special.Description</p>
            </div>
            <div class="col-md-3">
                <p>@special.StartTime.DayOfWeek</p>
                <p>@special.StartTime.ToString("HH:mm") - @special.EndTime.ToString("HH:mm")</p>
                <p>@special.Location</p>
            </div>
            <div class="clearfix"></div>
            <div class="col-md-12 verticalCenter noSelect">
                <span id="@("add"+special.ItemId)" class="glyphicon glyphicon-plus-sign qtyBtn"></span>
                <span id="@("qty"+special.ItemId)">1</span>
                <span id="@("min"+special.ItemId)" class="glyphicon glyphicon-minus-sign qtyBtn"></span>
                <a class="btn btn-default shopBtn" id="@("addToProgramme"+special.ItemId)">To Programme</a>
                <a class="btn btn-default shopBtn" id="@("addToCart"+special.ItemId)">To shopping Cart</a>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
}
