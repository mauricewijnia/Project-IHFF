@using Project_IHFF.Models
@model FilmsViewModel


@Html.ValidationSummary()
@using (Html.BeginForm("_AddFilm", "AdminController", FormMethod.Post))
{
    <label>Name: </label>
    @Html.TextBoxFor(x => x.film.name)
    <br />
    <label>Description:</label>
    @Html.TextBoxFor(x => x.film.description)
    <br />
    <label>Location: </label>
    @Html.TextBoxFor(x => x.film.location)
    <br />
    <label>Price: </label>
    @Html.TextBoxFor(x => x.film.price)
    <br />
    <label>Directors:</label>
    @Html.TextBoxFor(x => x.film.director)
    <br />
    <label>Actors: </label>
    @Html.TextBoxFor(x => x.film.actors)
    <br />
    <label>Capacity: </label>
    @Html.TextBoxFor(x => x.film.capacity)
    <br />
    <br />

    <label>First Exhibition</label>
    <br />
    <label>Starting Time:</label>
    @Html.TextBoxFor(x => x.exhibitionA.startTime)
    <br />
    <label>Ending Time:</label>
    @Html.TextBoxFor(x => x.exhibitionA.endTime)
    <br />
    <br />
    <label>Second Exhibition (Optional)</label>
    <br />
    <label>Starting Time:</label>
    @Html.TextBoxFor(x => x.exhibitionB.startTime)
    <br />
    <label>Ending Time:</label>
    @Html.TextBoxFor(x => x.exhibitionB.endTime)
    <br />

    <input type="submit" value="Submit" class="btn btn-primary" />
}
