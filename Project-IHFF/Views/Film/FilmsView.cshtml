@using Project_IHFF.Models;
@using System.Collections.Generic;

@model IEnumerable<ExhibitionViewModel>

@foreach (ExhibitionViewModel film in Model)
            {
    <div class="contentBox">
        <div class="col-md-2 noPadd">
            <img src="@film.Image" style="height:13em" />
        </div>
        <div class="col-md-10 noPadd whiteText">
            <div class="col-md-9">
                <h1 class="title">@film.Name</h1>
                <h3 class="subTitle">@film.Director</h3>
                <p class="description">@film.Description</p>
                <p>@film.Actors</p>           
            </div>
            <div class="col-md-3">
                <div class="times">
                    <span>@film.StartTime.DayOfWeek</span><br />
                    <span class="OrangeText">@film.StartTime.ToString("HH:mm") - @film.EndTime.Value.ToString("HH:mm")</span>
                </div>
                <div class="lower">
                    <span>@film.Location</span>
                </div>
                
            </div>

            <div class="clearfix"></div>
 
            <div class="col-md-12 noSelect">
                <div class="right">
                    <a class="btn btn-default shopBtn" id="@("addToProgramme"+film.FilmId)">To Programme</a>
                    <a class="btn btn-default shopBtn" id="@("addToCart"+film.FilmId)">To shopping Cart</a>
                </div>
                <div class="qtySection right">
                    <span class="price" id="@("price"+film.FilmId)">€ @film.Price</span>
                    <span id="@("add"+film.FilmId)" class="glyphicon glyphicon-plus-sign qtyBtn qtyBtnfilm"></span>
                    <span id="@("qty"+film.FilmId)">1</span>
                    <span id="@("min"+film.FilmId)" class="glyphicon glyphicon-minus-sign qtyBtn qtyBtnfilm"></span>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>
    </div>
}


